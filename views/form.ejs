<form method="POST" action="/new">
    <h1>
        <%= heading %>
    </h1>

    <fieldset>
        <div>
            <label for="author">
                <%= author %>
            </label>
            <input type="text" name="author" id="author">
        </div>

        <div>
            <label for="msg">
                <%= message %>
            </label>
            <input type="text" name="msg" id="msg">
        </div>
    </fieldset>

    <button type="submit">Submit</button>
</form>